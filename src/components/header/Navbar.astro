---
const blue = "#0085ff";
const blueDown = "#69b4ff";
const black = "#060606";
---
<div class="contenedor navigation">
    <a href="#" class="logo">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-align-box-left-top-filled" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M18.333 2c1.96 0 3.56 1.537 3.662 3.472l.005 .195v12.666c0 1.96 -1.537 3.56 -3.472 3.662l-.195 .005h-12.666a3.667 3.667 0 0 1 -3.662 -3.472l-.005 -.195v-12.666c0 -1.96 1.537 -3.56 3.472 -3.662l.195 -.005h12.666zm-10.333 9h-2l-.117 .007a1 1 0 0 0 .117 1.993h2l.117 -.007a1 1 0 0 0 -.117 -1.993zm4 -3h-6l-.117 .007a1 1 0 0 0 .117 1.993h6l.117 -.007a1 1 0 0 0 -.117 -1.993zm-2 -3h-4l-.117 .007a1 1 0 0 0 .117 1.993h4l.117 -.007a1 1 0 0 0 -.117 -1.993z" stroke-width="0" fill="currentColor" />
        </svg>
        <span class="__name">
            Juan Torres
        </span>
    </a> <!--logo -->
    <nav>
        <ul>
            <a href="#about">
                <li>About Me</li>
            </a>
            <a href="#projects">
                <li>Personal Projects</li>
            </a>
            <a href="#contact">
                <li>Contact</li>
            </a>
        </ul>
    </nav>
    <button>CV</button> 
</div>

<style define:vars={{blue, blueDown, black}}>
    .navigation {
        max-width: 120rem;
        margin-inline: auto;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        color: white;
        background-color: rgba(182, 204, 216, 0);
        font-size: 1.8rem;
        padding-block: 3.2rem;
        position: fixed;
        top: 0;
        border-radius: 1rem;
        animation: scroll-nav auto linear;
        animation-timeline: scroll(root block);
        

        & .logo {
            font-size: 4rem;
            color: var(--blue);
            display: flex;
            align-items: center;

            & .__name {
                font-size: 1.6rem;
                color: white;
                margin-left: 1rem;
                transition: color .3s;
            }
        }
    }
    .navigation ul {
        padding: 0;
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 3rem;
        margin-top: 3rem;
        text-align: center;

        & li {
            list-style: none;
            transition-property: color;
            transition-duration: .2s;
        }
    }
    .navigation ul li:hover {
        cursor: pointer;
        color: var(--blue);
    }
    nav {
        display: flex;
        align-items: center;
    }
    button {
        display: none;
        color: white;
        cursor: pointer;
        font-size: 1.6rem;
        padding-block: 1rem;
        padding-inline: 3rem;
        border: none;
        border-radius: .4rem;
        background-color: var(--blue);
        transition: background-color .3s;
    }
    button:hover {
        color: var(--blue);
        background-color: white;
    }
    /*--------------- Animation ---------------------*/
    @keyframes scroll-nav {
        from {
            background-color: rgba(182, 204, 216, 0);
        }
        to {
            background-color: rgba(182, 204, 216, 0.2);
        }
    }
    /*--------------- Responsive Design ----------------*/
    @media only screen and (min-width: 768px) {
        .navigation {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
            color: white;
            font-size: 1.8rem;
            padding-block: 3.2rem;
            position: fixed;
            top: 0%;
        }
        button {
            display: block;
        }
        .navigation ul {
            padding: 0;
            display: flex;
            flex-direction: row;
            align-items: center;
            gap: 3rem;
            margin: 0rem;
        }
    }

</style>