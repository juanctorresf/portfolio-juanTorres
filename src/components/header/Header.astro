---
import HeaderContain from "./HeaderContain.astro";

const black = "#060606";
---
<header id="home">
    <div class="contenedor">
        <HeaderContain />
    </div>
</header>

<style define:vars={{black}}>
    header {
        height: 100svh;
        margin: 0;
        background-image:linear-gradient(to top, rgba(6,6,6,1),rgba(6,6,6,0.8) ), url("../../../public/espectro640x427.jpg");
        background-repeat: no-repeat;
        background-size: cover;
        overflow: hidden;
        /* border: 1px solid red; */
    }
    
    @media only screen and (min-width: 1024px) {
        header {
            background-image:linear-gradient(to top, rgba(6,6,6,1),rgba(6,6,6,0.8) ), url("../../../public/espectro1280x853.jpg");
            background-size: cover;
            background-repeat: no-repeat;
        }
    }
    @media only screen and (min-width: 2024px) {
        header {
            background-image:linear-gradient(to top, rgba(6,6,6,1),rgba(6,6,6,0.8) ), url("../../../public/espectro4608x3072.jpg");
        }
        
    }
</style>