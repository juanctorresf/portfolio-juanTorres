---
const greenBlack: string = "rgba(35, 54, 52, 0.5)";
---
<section id="contact">
    <h1 class="heading">Contact</h1>
    <p class="description">Ways to contact me:</p>
    <div class="links">
        <a 
            href="mailto:jtorres.devv@gmail.com" 
            target="_blank"
            class="links__link"
        >
            Email
        </a>
        <a 
            href="https://www.linkedin.com/in/juan-torres-devv/" 
            target="_blank"
            class="links__link" 
        >
            LinkedIn
        </a>
        <a 
            href="https://github.com/juanctorresf" 
            target="_blank"
            class="links__link"
        >
            GitHub
        </a>
    </div>

</section>

<style lang="scss" define:vars={{ greenBlack }}>
    section {
        margin-block: 5rem;
    }
    .heading {
        font-size: 4rem;
        text-transform: uppercase;
        color: white;
        text-align: center;
    }

    .description {
        color: white;
        font-size: 1.8rem;
        text-align: center;
    }
    .links {
        margin-top: 5rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        color: white;

        &__link {
            width: 90%;
            font-size: 1.6rem;
            text-align: center;
            background-color: var(--greenBlack);
            backdrop-filter: blur(10px);
            margin-bottom: 2rem;
            padding: 1rem 1.5rem;
            border-radius: .5rem;
        }
    }
    // Responsive Design
    @media screen and (width >= 768px) {
        .heading {
            font-size: 7.2rem;
            margin-bottom: 3rem;
        }

        .links {

            &__link {
                width: 50rem;
            }
        }
    }
    @media screen and (width >= 1028px) {
        .heading {
            margin-top: 4rem;
        }

        .links {
            flex-direction: row;
            column-gap: 3rem;
            justify-content: center;
            margin-top: 2rem;

            &__link {
                width: 30rem;
                transition-property: background-color;
                transition-duration: .2s;

                &:hover {
                    background-color: #0085FF;
                }
            }
            
        }
    }
</style>